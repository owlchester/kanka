<?xml version="1.0"?>
<ruleset name="Laravel Standards">
    <description>The PSR12 coding standard for Laravel.</description>
    <rule ref="PSR12">
        <exclude name="PSR12.Files.FileHeader.SpacingInsideBlock"/>
        <exclude name="PSR12.Operators.OperatorSpacing.NoSpaceBefore"/>
        <exclude name="PSR12.Operators.OperatorSpacing.NoSpaceAfter"/>
        <exclude name="PSR12.Classes.ClassInstantiation.MissingParentheses"/>
    </rule>

    <rule ref="Squiz.WhiteSpace.ScopeClosingBrace"/>

    <file>app</file>
    <file>config</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>


    <exclude-pattern>*/.phpstorm*</exclude-pattern>
    <exclude-pattern>*/_ide_helper.php</exclude-pattern>

    <exclude-pattern>*/cache/*</exclude-pattern>
    <exclude-pattern>*/config/*</exclude-pattern>
    <exclude-pattern>*/database/*</exclude-pattern>
    <exclude-pattern>*/docs/*</exclude-pattern>
    <exclude-pattern>*/migrations/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/lang/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>

    <exclude-pattern>*/*.js</exclude-pattern>
    <exclude-pattern>*/*.css</exclude-pattern>
    <exclude-pattern>*/*.xml</exclude-pattern>
    <exclude-pattern>*/*.blade.php</exclude-pattern>
    <exclude-pattern>*/autoload.php</exclude-pattern>
    <exclude-pattern>*/Console/Kernel.php</exclude-pattern>
    <exclude-pattern>*/Exceptions/Handler.php</exclude-pattern>
    <exclude-pattern>*/Http/Kernel.php</exclude-pattern>

    <arg name="colors"/>
    <arg value="spv"/>

    <ini name="memory_limit" value="128M"/>
</ruleset>
